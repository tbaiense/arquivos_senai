package japedidos.produto;

public class Produto {
	public final String nome;
	public final int id;
	public final String categoria;
	public final double precoCusto;
	public final double precoVenda;
	
	public Produto(String nome, int id, String categoria, double precoCusto, double precoVenda) {
		this.nome = nome;
		this.id = id;
		this.categoria = categoria;
		this.precoCusto  = precoCusto;
		this.precoVenda = precoVenda;
	}
	
	public String toString() {
		return nome + " | " + id + " | " + precoCusto + " | " + precoVenda;
		
	}	
	
}
